{
  "name": "video-subtitle-extractor",
  "version": "1.0.0",
  "description": "Free offline video to subtitle extractor with Japanese to Korean translation",
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "webpack --config webpack.main.config.js --mode development --watch",
    "dev:renderer": "webpack serve --config webpack.renderer.config.js --mode development",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "webpack --config webpack.main.config.js --mode production",
    "build:renderer": "webpack --config webpack.renderer.config.js --mode production",
    "start": "electron dist/main.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "setup-win": "node scripts/download-windows-binaries.js",
    "build-win": "node scripts/pre-build.js && npm run build && electron-builder --win",
    "dist-win": "npm run setup-win && npm run build && electron-builder --win",
    "dist-portable": "npm run build && electron-builder --win --publish=never --config.win.target=portable",
    "test-win": "node scripts/test-windows.js",
    "setup": "node scripts/setup.js && npm run setup-win"
  },
  "keywords": [
    "electron",
    "video",
    "subtitle",
    "whisper",
    "translation",
    "free"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "electron": "^27.1.0",
    "electron-builder": "^24.7.0",
    "eslint": "^8.54.0",
    "eslint-plugin-react": "^7.33.0",
    "fs-extra": "^11.3.1",
    "html-webpack-plugin": "^5.5.3",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@ffmpeg/ffmpeg": "^0.12.15",
    "child_process": "^1.0.2",
    "fluent-ffmpeg": "^2.1.2",
    "node-fetch": "^3.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "whisper-node": "^1.1.1"
  },
  "build": {
    "appId": "com.yourname.video-subtitle-extractor",
    "productName": "Video Subtitle Extractor",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "models/**/*"
    ],
    "extraResources": [
      {
        "from": "models",
        "to": "models"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "동영상자막추출기-${version}-${arch}.${ext}",
      "publisherName": "Free Subtitle Extractor",
      "extraFiles": [
        {
          "from": "bin/win32",
          "to": "bin/win32"
        },
        {
          "from": "models",
          "to": "models",
          "filter": [
            "**/*"
          ]
        }
      ]
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
